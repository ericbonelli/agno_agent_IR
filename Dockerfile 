# Imagem leve e estável
FROM python:3.11-slim

# Evita pyc e garante flush de logs
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

# Dependências do sistema (poppler opcional para PDF)
RUN apt-get update && apt-get install -y --no-install-recommends \
    poppler-utils \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Instala deps primeiro (melhor cache)
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copia o código principal
COPY agno_agent.py .

# Porta do FastAPI
EXPOSE 8000

# Variáveis que você define no Render (ou Railway)
# ENV OPENAI_API_KEY=defina_no_painel
# ENV API_KEY=defina_no_painel

# Comando para rodar o servidor
CMD ["uvicorn", "agno_agent:app", "--host", "0.0.0.0", "--port", "8000"]
